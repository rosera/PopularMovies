<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.technologynorth.rosera.popmoviess2.MovieDetailFragment"
    android:id="@+id/card_movies"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="4dp"
    android:nestedScrollingEnabled="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewFilm"
                android:contentDescription="@string/film_poster"
                android:minWidth="75dp"
                android:minHeight="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitle"
                android:layout_below="@id/imageViewFilm"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11dp"
                android:textStyle="bold"
                android:text="Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRating"
                android:layout_below="@id/textViewTitle"
                android:paddingLeft="5dp"

                android:paddingBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="10dp"
                android:text="Rating"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
